<?xml version="1.0" encoding="utf-8"?>
<web-app
        version="2.5"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
		<servlet-name>rawServlet</servlet-name>
		<servlet-class>com.github.eljah.visualbusroutes.servlet.RawServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>rawServlet</servlet-name>
		<url-pattern>/raw</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>rawJspServlet</servlet-name>
		<jsp-file>/jsp/rawFile.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>rawJspServlet</servlet-name>
		<url-pattern>/rawJsp</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>cron</web-resource-name>
			<url-pattern>/load*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
</web-app>
